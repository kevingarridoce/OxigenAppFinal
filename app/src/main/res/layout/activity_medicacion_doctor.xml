<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo12"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:src="@drawable/medicamento" />

        <TextView
            android:id="@+id/nom_paciente_doc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_form_medicamento"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/medicacion_doc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:layout_marginBottom="10dp"
            android:hint="Ingresar medicacion"
            android:background="@drawable/input_form_medicamento"
            android:paddingTop="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="#fff"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/ing_medi_doc_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar medicacion"
            android:background="@drawable/btn_historico_color"
            app:backgroundTint="#398AE5"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/regresar_doc_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textColor="#fff"
            app:backgroundTint="@color/boton_cerrar_sesion"
            android:background="@drawable/btn_historico_color"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>